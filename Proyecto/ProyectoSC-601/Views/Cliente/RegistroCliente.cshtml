@model ProyectoSC_601.Entities.ClienteEnt
@{
    ViewBag.Title = "RegistroCliente";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    <link href="~/Assets/css/registroStyle.css" rel="stylesheet">
}

<div class="container" id="container">
    <div class="form-container sign-up-container">
        @if (ViewBag.MensajeExitoso != null)
        {
            <div class="alert alert-success" role="alert" style="text-align: center; margin: 10px!important;">
                @ViewBag.MensajeExitoso
            </div>
        }

        @if (ViewBag.MensajeNoExitoso != null)
        {
            <div class="alert alert-danger" role="alert" style="text-align: center; margin: 10px !important;">
                @ViewBag.MensajeNoExitoso
            </div>
        }

        @using (Html.BeginForm("RegistroCliente", "Cliente", FormMethod.Post, new { @class = "pt-3" }))
        {
            <h1 style="font-size:30px!important;">Crear Cuenta</h1>
            @Html.TextBoxFor(m => m.Ced_Cliente, new { @placeholder = "Identificación", @type = "text", required = "required" , onkeyup = "ConsultarNombreCliente();"})
            @Html.TextBoxFor(m => m.Nombre_Cliente, new { @readOnly= "readOnly", @style= "background-color: #CBCBCB", @placeholder = "Nombre", @type = "text", required = "required" })
            @Html.TextBoxFor(m => m.Apellido_Cliente, new { @readOnly = "readOnly", @style = "background-color: #CBCBCB", @placeholder = "Primer Apellido", @type = "text", required = "required" })
            @Html.TextBoxFor(m => m.Correo_Cliente, new { @placeholder = "Correo Electrónico", @type = "email", required = "required" })
            @Html.TextBoxFor(m => m.Contrasenna_Cliente, new { @placeholder = "Contraseña", @type = "password", required = "required" })
            <br />
            <button type="submit">Registrarse</button>
            <br />
        }
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel">
                <h1>¡Bienvenido!</h1>
                <p>Para mantenerte conectado con nosotros por favor inicia sesión</p>
                <button class="ghost" id="signIn" onclick="location.href='@Url.Action("Login", "Cliente")'">Iniciar Sesion</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/Assets/js/Cliente.js"></script>