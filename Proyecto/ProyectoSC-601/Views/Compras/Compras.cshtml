@model ProyectoSC_601.Entities.InventarioEnt
@{
    ViewBag.Title = "Compras";
    Layout = "~/Views/Shared/_Layout_deAdmin.cshtml";
    <link href="~/Assets/css/ProductosAdminStyle.css" rel="stylesheet">
    <!-- Sweet Alert -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.js"></script>

}

<div class="container-xl px-4 mt-4">
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-8" style="margin-left:18%;margin-top:5%; margin-bottom:2%;">
            <div class="card mb-4">
                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-danger" role="alert" style="text-align: center; margin: 10px !important;margin-bottom:-40px!important;">
                        @ViewBag.Mensaje
                    </div>
                }
                <div class="card-header">Registrar Compra Proveedores</div>
                <div class="card-body ">
                    @using (Html.BeginForm("RegistrarProducto", "Inventario", FormMethod.Post, new { @class = "pt-3", @enctype = "multipart/form-data" }))
                    {

                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1" for="categoria">Proveedor</label>
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @placeholder = "Proveedor", @type = "text", required = "required" })
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1" for="nombre">Empresa</label>
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @placeholder = "Empresa", @type = "text", required = "required" })
                            </div>

                        </div>

                        <div class="row gx-3 mb-3">
                            <div class="col-md-6">
                                <label class="small mb-1" for="categoria">Producto</label>
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @placeholder = "Producto", @type = "text", required = "required" })
                            </div>
                            <div class="col-md-6">
                                <label class="small mb-1" for="nombre">Cantidad</label>
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @placeholder = "Cantidad", @type = "text", required = "required" })
                            </div>

                        </div>
                        <div class="row gx-3 mb-3">
                            <div class="col-md-12">
                                <label class="small mb-1" for="cantidad">Estado</label>
                                @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", @placeholder = "Estado", @type = "text", required = "required" })
                            </div>
                            <div class="form-group" style="padding-top:28px!important;">
                                <h8>Adjuntar Factura</h8>
                                <input type="file" class="form-control" id="ImgProducto" name="ImgProducto" required>
                            </div>
                        </div>
                        
                        <div style="text-align:center;padding-top:4%;">
                            <button class="btn btn-success" type="submit"> Registrar <i class="bi bi-pencil-square"></i></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

