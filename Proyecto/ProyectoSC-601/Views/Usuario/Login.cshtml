@model ProyectoSC_601.Entities.UsuarioEnt
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    <link href="~/Assets/css/logstyle.css" rel="stylesheet">
}

<div class="container" id="container">
    <div class="form-container sign-in-container">
        @if (ViewBag.MensajeNoExitoso != null)
        {
            <div class="alert alert-danger" role="alert" style="text-align: center; margin: 10px !important;margin-bottom:-40px!important;">
                @ViewBag.MensajeNoExitoso
            </div>
        }
        @using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { @class = "pt-3", @novalidate = "novalidate" }))
        {
            <h1 style="font-size:30px!important;">Iniciar Sesión</h1>
            <br />
            <div style="align-self: flex-start;">
                <label class="medium" for="correo">Correo Electrónico</label>
            </div>
            @Html.TextBoxFor(m => m.Correo_Usuario, new { @placeholder = "usuario@ejemplo.com", @type = "email" })
            <div style="align-self: flex-start;">
                @Html.ValidationMessageFor(m => m.Correo_Usuario, "", new { @style = "color: red;" })
            </div>


            <div style="align-self: flex-start; margin-top: 5%;">
                <label class="medium" for="contrasenna">Contraseña</label>
            </div>
            @Html.TextBoxFor(m => m.Contrasenna_Usuario, new { @placeholder = "● ● ● ● ● ● ● ● ● ● ●", @type = "password" })
            <div style="align-self: flex-start;">
                @Html.ValidationMessageFor(m => m.Contrasenna_Usuario, "", new { @style = "color: red;" })
            </div>

            <a href='@Url.Action("RecuperarCuentaUsuario", "Usuario")' style=" margin-top: 8%;">¿Olvidaste tu contraseña?</a>
            <button type="submit">Iniciar Sesión</button>
            <a href='@Url.Action("Index", "Home")' style="color: #6282a9; font-size: 28px; margin-bottom: 4%;"><i class="bi bi-arrow-left-circle"></i></a>
        }
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right">
                <h1>¡Hola, Amigo!</h1>
                <p>Introduce tus datos personales y comienza tu viaje con nosotros.</p>
                <button class="ghost" id="signUp" onclick="location.href='@Url.Action("RegistroUsuario", "Usuario")'">Registrarse</button>

            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var alertDiv = document.querySelector(".alert.alert-danger");

        if (alertDiv) {
            alertDiv.style.display = "block";
            setTimeout(function () {
                alertDiv.style.display = "none";
            }, 3000);
        }
    });
</script>


