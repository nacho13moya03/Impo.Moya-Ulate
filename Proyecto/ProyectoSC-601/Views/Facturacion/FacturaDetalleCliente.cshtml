@model IEnumerable<ProyectoSC_601.Entities.FacturaEnt>
@{
    ViewBag.Title = "FacturaDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Assets/css/perfilClienteStyle.css" rel="stylesheet">
    <link href="~/Assets/css/gestionClientesStyle.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
}
<div class="container mt-5 pt-4">
    <div class="row justify-content-center">
        <div class="col-12 grid-margin stretch-card">
            <br>
            <br>
            <br>
            <div class="card" style="margin-bottom:80px;">
                <div class="card-body">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                        <h4 class="card-title">Detalles Factura</h4>
                        <div class="d-flex">
                            <a class="btn btn-primary" style="background-color: #6282a9;border:none; " href="@Url.Action("FacturacionCliente","Facturacion")" title="Regresar" style="margin-left:5%;"><i style="color: white;" class="fa fa-arrow-left fa-lg"></i></a>
                        </div>
                    </div>
                    <div class="table-responsive" style=" margin-top: 40px !important;">
                        @if (Model.Count() > 0)
                        {

                            <table id="TablaClientes" class="table table-bordered table-hover">
                                <thead class="table-info">
                                    <tr>
                                        <th style="background-color: #6282a9; color:white;" class="visually-hidden">Factura</th>
                                        <th style="background-color: #6282a9; color:white;">Producto</th>
                                        <th style="background-color: #6282a9; color:white;">Precio Unidad</th>
                                        <th style="background-color: #6282a9; color:white;">Impuesto Unidad</th>
                                        <th style="background-color: #6282a9; color:white;">Cantidad</th>
                                        <th style="background-color: #6282a9; color:white;">SubTotal</th>
                                        <th style="background-color: #6282a9; color:white;">Impuesto</th>
                                        <th style="background-color: #6282a9; color:white;">Total</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="visually-hidden">@item.ID_Factura</td>
                                            <td  style="border-left: 1px solid #ECECEC;">@item.Nombre</td>
                                            <td>₡ @item.PrecioPagado.ToString("N2")</td>
                                            <td>
                                                ₡ @item.ImpuestoPagado.ToString("N2")
                                            </td>
                                            <td>@item.CantidadPagado</td>
                                            <td>₡ @item.SubTotal.ToString("N2")</td>
                                            <td>₡ @item.Impuesto.ToString("N2")</td>
                                            <td>₡ @item.Total.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <table id="TablaClientes" class="table table-bordered table-hover">
                                <thead class="table table-bordered table-hover">
                                    <tr>
                                        <th style="background-color: #6282a9; color:white;">Factura</th>
                                        <th style="background-color: #6282a9; color:white;">Nombre</th>
                                        <th style="background-color: #6282a9; color:white;">Precio Unidad</th>
                                        <th style="background-color: #6282a9; color:white;">Impuesto Unidad</th>
                                        <th style="background-color: #6282a9; color:white;">Cantidad</th>
                                        <th style="background-color: #6282a9; color:white;">SubTotal</th>
                                        <th style="background-color: #6282a9; color:white;">Impuesto</th>
                                        <th style="background-color: #6282a9; color:white;">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        }

                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*Se agrega un data table para la consulta de clientes*@
<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script>var $j = jQuery.noConflict();</script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

<script>
    $j(document).ready(function () {
        $j('#TablaClientes').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },
            "pagingType": 'simple'
        });

    });
</script>

<script>
    // Función para actualizar el contador de productos en el carrito
    function actualizarContadorCarrito() {
        $.ajax({
            url: '/Producto/Catalogo',
            type: 'GET',
            success: function (data) {
                // Actualizar el valor del contador en el HTML
                $('#contador-carrito').text(data);
            },
            error: function () {
                console.log('Error al actualizar el contador del carrito.');
            }
        });
    }

    // Llamar a la función de actualización cuando se cargue la página
    $(document).ready(function () {
        actualizarContadorCarrito();
    });

</script>