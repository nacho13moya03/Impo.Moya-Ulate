                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownProveeduria">
                            <li><a class="dropdown-item" @Html.ActionLink("Gestionar Empresas", "ConsultaEmpresas", "Empresa", new { area = "" }, new { @class = "nav-link" })</a></li>
                            <li><a class="dropdown-item" @Html.ActionLink("Gestionar Proveedores", "ConsultaProveedores", "Proveedor", new { area = "" }, new { @class = "nav-link" })</a></li>
                            <li><a class="dropdown-item" @Html.ActionLink("Gestionar Compras", "ConsultaCompras", "Compras", new { area = "" }, new { @class = "nav-link" })</a></li>
                        </ul>
                    </li>
                    <li><a class="nav-link scrollto" @Html.ActionLink("Gestionar Usuarios", "GestionUsuarios", "Usuario", new { area = "" }, new { @class = "nav-link" })</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownVentas" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Ventas
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownVentas">
                            <li><a class="dropdown-item" @Html.ActionLink("Gestionar Pedidos", "ConsultarPedidos", "Pedidos", new { area = "" }, new { @class = "nav-link" })</a></li>
                            <li><a class="dropdown-item" @Html.ActionLink("Facturación", "Facturacion", "Facturacion", new { area = "" }, new { @class = "nav-link" })</a></li>
                        </ul>
                    </li>
                    @if (Session["ID_Usuario"] != null)
                    {
                        @Html.ActionLink("Perfil", "PerfilAdmin", "Usuario", new { area = "" }, new { @class = "nav-link" })
                    }
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav>

            @Html.ActionLink("Cerrar Sesión", "CerrarSesionUsuario", "Usuario", new { area = "" }, new { @class = "get-started-btn scrollto nav-link" })
        </div>
    </header>
    @*HEADER*@


    @RenderBody()


    @*FOOTER*@
